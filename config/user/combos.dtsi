#define COMBO_TIMEOUT 50

#define COMBO(NAME, TIMEOUT, POSITION, LAYER, BINDINGS )  \
	combo_##NAME {                      		\
	    timeout-ms    = <TIMEOUT>;				\
		layers 		  = <LAYER>;				\
	    bindings      = <BINDINGS>;     		\
	    key-positions = <POSITION>;          	\
	};

combos {
	compatible = "zmk,combos";
	COMBO(config, COMBO_TIMEOUT, RT4 RB4, QWERTY, &mo CONFIG)
};q